<!-- views/login.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        /* Inline CSS styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #121212; /* Dark background */
            color: #ffffff; /* White text */
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            max-width: 500px;
            margin: 50px auto;
            background: #1e1e1e; /* Slightly lighter dark background */
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            color: #00aaff; /* Bright blue color for headings */
            margin-bottom: 30px;
        }

        form label {
            display: block;
            margin-bottom: 5px;
            color: #ffffff;
        }

        form input[type="email"],
        form input[type="password"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #444444;
            border-radius: 4px;
            background-color: #2b2b2b;
            color: #ffffff;
        }

        form input::placeholder {
            color: #bbbbbb;
        }

        form button {
            width: 100%;
            padding: 12px;
            background: #007BFF; /* Blue button */
            border: none;
            color: #fff;
            font-size: 16px;
            border-radius: 4px;
        }

        form button:hover {
            background: #0056b3; /* Darker blue on hover */
            cursor: pointer;
        }

        p {
            text-align: center;
            margin-top: 20px;
            color: #cccccc;
        }

        a {
            color: #00aaff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Optional: Hide the <br> elements */
        br {
            display: none;
        }

        /* Responsive adjustments */
        @media (max-width: 600px) {
            .container {
                width: 90%;
                margin: 30px auto;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Login</h1>
        <form action="/auth/login" method="POST">
            <% if (typeof error !== 'undefined') { %>
                <p style="color: #ff6b6b; text-align: center;"><%= error %></p>
            <% } %>
            <label for="username">Email:</label>
            <input type="email" name="username" placeholder="Enter your email" required>

            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="Enter your password" required>

            <button type="submit">Login</button>
        </form>
        <p>Forgot your password? <a href="/auth/forget-password">Reset it here</a>.</p>
        <p>Don't have an account? <a href="/auth/register">Register here</a>.</p>
    </div>
</body>
</html>
